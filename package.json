{
  "name": "recomeai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "cross-env NEXT_DISABLE_ESLINT=1 next dev",
    "build": "cross-env NEXT_DISABLE_ESLINT=1 next build",
    "vercel-build": "prisma migrate deploy && cross-env NEXT_DISABLE_ESLINT=1 next build",
    "start": "next start",
    "lint": "echo \"ESLint disabled\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run --reporter=default",
    "test:integration": "vitest run --config vitest.integration.config.ts --reporter=default",
    "test:e2e": "playwright test",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "seed:mock": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/seed-mock.ts",
    "ingest:expand": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/ingest-expand.ts",
    "ingest:daemon": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/ingest-daemon.ts",
    "popularity:renormalize": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/renormalize-popularity.ts",
    "fix:posters": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/fix-posters.ts",
    "db:clear": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/clear-database.ts",
    "analyze:item": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/analyze-item.ts",
    "analyze:multiple": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/analyze-multiple-items.ts",
    "check:tmdb": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/check-tmdb-ranges.ts",
    "explain:popularity": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/explain-popularity.ts",
    "ingest:sample": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/ingest-sample.ts",
    "ingest:sample-anime": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/ingest-sample-anime.ts",
    "top:anime": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register src/scripts/top-anime.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.7",
    "@heroicons/react": "^2.1.5",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "next": "15.0.3",
    "pg": "^8.13.1",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "sonner": "^1.5.1",
    "swr": "^2.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.5.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.16.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.12.0",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
